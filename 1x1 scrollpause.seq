;---------------------------------------APAGE    = $AAATEXT    = $4000ALINE    = 1024+(40*10);---------------------------------------ASCROLL  LDA ADELAY         BEQ ASC00         DEC ADELAY         RTSASC00    LDA AXPOS         SEC         SBC #$03         AND #$07         STA AXPOS         BCC ASC01         RTSASC01    LDX #$00ASC02    LDA ALINE+1,X         STA ALINE,X         INX         CPX #$28         BNE ASC02         JSR ANEXT         STA ALINE+39         RTSANEXT    LDY #$00         LDA (APAGE),Y         BNE AN00         JSR AINIT         JMP ANEXTAN00     INC APAGE         BNE AN01         INC APAGE+1AN01     CMP #$1F         BNE AN02         JSR APAUSE         JMP ANEXTAN02     RTS         ;         ; ÓET ÐAUSE ÌENGTH         ;APAUSE   LDY #$00         LDA (APAGE),Y         TAX         LDA AWAIT,X         STA ADELAY         INC APAGE         BNE AP01         INC APAGE+1AP01     RTS         ;AINIT    LDX #<ATEXT         LDY #>ATEXT         STX APAGE         STY APAGE+1         RTS;---------------------------------------AXPOS    .BYTE $00ADELAY   .BYTE $00AWAIT    .BYTE 100,125,150,175,200         .BYTE 225,250;---------------------------------------