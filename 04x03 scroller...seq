ATEXT    = $AASCROLL   = $3400CHTAB    = $3000ALINE    = 1024+(40*20)         ;ASCROLL  LDA AXPOS         SEC         SBC #$03         AND #$07         STA AXPOS         BCC ASC00         RTSASC00    LDX #$00         LDA ALINE+1,X         STA ALINE,X         LDA ALINE+41,X         STA ALINE+40,X         LDA ALINE+81,X         STA ALINE+80,X         INX         CPX #$27         BNE ASC00+2         LDX AWIDTH         CPX #$04         BNE ASC01         JSR ANEXT         LDX #$00         STX AWIDTHALO1     = *+1ASC01    LDA CHTAB,X         STA ALINE+39ALO2     = *+1         LDA CHTAB+$0100,X         STA ALINE+79ALO3     = *+1         LDA CHTAB+$0200,X         STA ALINE+119         INC AWIDTH         RTS;---------------------------------------ANEXT    LDY #$00         LDA (ATEXT),Y         BNE AN00         JSR AINIT         JMP ANEXTAN00     INC ATEXT         BNE AN01         INC ATEXT+1AN01     TAX         DEX         LDA ASCII,X         ASL A         ASL A         STA ALO1         STA ALO2         STA ALO3         RTS;---------------------------------------AINIT    LDX #<SCROLL         LDY #>SCROLL         STX ATEXT         STY ATEXT+1         LDA #$04         STA AWIDTH         RTS;---------------------------------------AWIDTH   .BYTE $00AXPOS    .BYTE $00;---------------------------------------ASCII    .BYTE $00,$01,$02,$03,$04,$05         .BYTE $06,$07,$08,$09,$0A,$0B         .BYTE $0C,$0D,$0E,$0F,$10,$11         .BYTE $12,$13,$14,$15,$16,$17         .BYTE $18,$19,$1A,$1B,$1C,$1D         .BYTE $1E,$1F,$20,$21,$22,$23         .BYTE $24,$25,$26,$27,$28,$29         .BYTE $2A,$2B,$2C,$2D,$2E,$2F         .BYTE $30,$31,$32,$33,$34,$35         .BYTE $36,$37,$38,$39,$3A,$3B         .BYTE $3C,$3D,$3E,$3F;---------------------------------------