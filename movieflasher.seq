;---------------------------------------         ; ∆OR ‘HE …“—LBYTE1   LDA LINEOFFLBYTE2   LDA LINEDRAWLBYTE3   LDA LINEONLBYTE4   LDA LINEHOLD;---------------------------------------LINEOFF  LDA LDELAY         SEC         SBC #$04         AND #$07         STA LDELAY         BCC LINEOFF1         RTSLINEOFF1 LDX LCOLOR         CPX #15         BEQ LINEOFF2         LDA LCOLOR1,X         STA LINECOL         INC LCOLOR         RTSLINEOFF2 LDA #$AD         STA LBYTE1         LDA #$20         STA LBYTE2         LDA #$00         STA LCOLOR         RTS;---------------------------------------LINEDRAW LDA LINENO         CMP LINEMAX         BNE LINED1         JSR LINEINITLINED1   LDX #<$0400+(40*11)         LDY #>$0400+(40*11)         STX SPAGE         STY SPAGE+1         LDY #$27LINED2   LDA (LPAGE),Y         CLC         ADC #128         STA (SPAGE),Y         DEY         BPL LINED2         LDA LPAGE         CLC         ADC #$28         STA LPAGE         LDA LPAGE+1         ADC #$00         STA LPAGE+1         INC LINENO         LDA #$AD         STA LBYTE2         LDA #$20         STA LBYTE3         RTS;---------------------------------------LINEINIT LDX #<$3000         LDY #>$3000         STX LPAGE         STY LPAGE+1         LDA #$00         STA LINENO         RTS;---------------------------------------LINEON   LDA LDELAY+1         SEC         SBC #$04         AND #$07         STA LDELAY+1         BCC LINEON1         RTSLINEON1  LDX LCOLOR         CPX #$08         BEQ LINEON2         LDA LCOLOR1,X         STA LINECOL         INC LCOLOR         RTSLINEON2  LDA #$AD         STA LBYTE3         LDA #$20         STA LBYTE4         RTS;---------------------------------------LINEHOLD LDA LDELAY+2         SEC         SBC #$02         AND #$07         STA LDELAY+2         BCC LINEH1         RTSLINEH1   LDA LPAUSE         BEQ LINEH2         DEC LPAUSE         RTSLINEH2   LDA #$AD         STA LBYTE4         LDA #$20         STA LBYTE1         LDA #$70         STA LPAUSE         RTS;---------------------------------------LDELAY   .BYTE $00,$00,$00LINENO   .BYTE $00LINEMAX  .BYTE 21LPAUSE   .BYTE $70LCOLOR   .BYTE $00LCOLOR1  .BYTE $00,$06,$02,$04,$0A,$0F         .BYTE $07,$01LCOLOR2  .BYTE $01,$07         .BYTE $0F,$02,$08,$02,$09,$00;---------------------------------------